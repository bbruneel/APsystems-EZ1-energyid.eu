# EnergyID API Configuration
ENERGYID_KEY=your_provisioning_key_here
ENERGYID_SECRET=your_provisioning_secret_here
ENERGYID_YOUR_DEVICE_ID=your_device_id_here
ENERGYID_YOUR_DEVICE_NAME=your_device_name_here
ENERGYID_HELLO_URL=https://hooks.energyid.eu/hello
ENERGYID_WEBHOOK_URL=https://hooks.energyid.eu/webhook-in

# Static IP of the EZ1 microinverter running in local mode
EZ1_IP_ADDRESS=192.168.0.100

# Log level (default: INFO)
ENERGYID_LOG_LEVEL=DEBUG  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Log file path (default: /var/log/energyid/energyid.log)
ENERGYID_LOG_FILE=/path/to/your/logs/energyid.log

# Enable console logging to stdout (default: false)
ENERGYID_CONSOLE_LOGGING=false  # Set to true to enable console output